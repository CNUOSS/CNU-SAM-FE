{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "@types"]
  },
  "include": ["./src/**/*"]
}
